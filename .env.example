# Langflow Configuration Example
# Copy this file to .env and customize the values
# DO NOT commit .env to version control!

# ============================================================================
# Directory & Storage Configuration
# ============================================================================

LANGFLOW_CONFIG_DIR=.langflow
LANGFLOW_SAVE_DB_IN_CONFIG_DIR=true
LANGFLOW_DATABASE_URL=sqlite:///.langflow/langflow.db
LANGFLOW_DATABASE_CONNECTION_RETRY=true

# ============================================================================
# Server Configuration
# ============================================================================

LANGFLOW_HOST=0.0.0.0
LANGFLOW_PORT=7860
LANGFLOW_WORKERS=1

# ============================================================================
# Logging Configuration
# ============================================================================

LANGFLOW_LOG_LEVEL=info
LANGFLOW_LOG_FILE=.langflow/logs/langflow.log
LANGFLOW_LOG_ROTATION=10 MB

# ============================================================================
# Cache Configuration
# ============================================================================

LANGFLOW_CACHE_TYPE=async
LANGFLOW_LANGCHAIN_CACHE=SQLiteCache

# ============================================================================
# Authentication & Security
# ============================================================================

LANGFLOW_AUTO_LOGIN=true
LANGFLOW_ENABLE_SUPERUSER_CLI=true
LANGFLOW_REMOVE_API_KEYS=false
LANGFLOW_STORE_ENVIRONMENT_VARIABLES=true

# For production, set these:
# LANGFLOW_AUTO_LOGIN=false
# LANGFLOW_SUPERUSER=admin
# LANGFLOW_SUPERUSER_PASSWORD=your-secure-password

# ============================================================================
# UI & UX Configuration
# ============================================================================

LANGFLOW_OPEN_BROWSER=false
LANGFLOW_MCP_COMPOSER_ENABLED=true

# ============================================================================
# Integration URLs
# ============================================================================

BACKEND_URL=http://localhost:7860/

# ============================================================================
# Environment Variables for Global Access
# ============================================================================

LANGFLOW_VARIABLES_TO_GET_FROM_ENVIRONMENT=OLLAMA_BASE_URL,OPENAI_API_KEY,ANTHROPIC_API_KEY
LANGFLOW_FALLBACK_TO_ENV_VAR=true

# ============================================================================
# Ollama Integration Configuration
# ============================================================================

OLLAMA_BASE_URL=http://0.0.0.0:11434

# Ollama models directory (stored locally in project)
# Note: This is configured in pixi.toml tasks via OLLAMA_MODELS env var
# Models will be downloaded to: .ollama/models/
# OLLAMA_MODELS=.ollama/models

# ============================================================================
# Optional API Keys (Add your actual keys here)
# ============================================================================

# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=...
# COHERE_API_KEY=...
# HUGGINGFACE_API_TOKEN=...
